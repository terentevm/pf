        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand navtext" href="/site/index">Project name</a>
    </div>

    <div class="container">
    {% block content %}{% endblock %}
      </div><!-- /.container -->
    {% block script_body_end %}
