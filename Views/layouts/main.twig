   <link href="/public/bootstrap/navmenu.css" rel="stylesheet">
   <link href="/public/bootstrap-fileinput/css/fileinput.min.css" rel="stylesheet" />
    
    {% block script_head %}
        {% for link in head_js %}
            <script src="{{ link }}"></script>
